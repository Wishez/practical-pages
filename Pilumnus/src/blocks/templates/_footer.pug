-
  var icons = {
    'facebook': 'https://facebook.com', 
    'twitter': 'https://twitter.com',
    'instagram': 'https://www.instagram.com/',
    'pinterest-p': 'https://pinterest.com/',
  }
footer.footer 
  .container 
    ul.socials.list-unstyled
      each href, icon in icons
        li.socialsIcon
          a.socialsIcon__refer(href= href)
            i.socialsIcon__icon.fa.fa-1x(class= "fa-"+icon)