		section.contactMe.section
			.container
				.sectionImageContainer.contactMeSectionImageContainer
					figure.contactMeSectionImageContainer__image.sectionImageContainer__image
				.connectMeFormContainer
					h2.contactMe__title.pull-right Contact
					.clearfix
					form.contactMeForm.pull-right#contactMeForm(method='post')
						.contactMeFormController
							input.contactMeFormController__input.formInput(
								type='text',
								name='name',
								pattern='[A-Za-zА-Яа-я]*',
								required,
								placeholder='Your name',
								max-length=100,
								min-length=3
							)
						.contactMeFormController
							input.contactMeFormController__input.formInput(
								type='text',
								name='email',
								required,
								placeholder='Your email',
								max-length=100,
								min-length=7
							)
						.contactMeFormController
							textarea.contactMeFormController__textarea.formInput_textarea(
								type='text',
								name='message',
								required,
								placeholder='Your message',
								max-length=300,
								min-length=1
							)
						button.contactMeForm__button.button(type='submit') Send message




					

