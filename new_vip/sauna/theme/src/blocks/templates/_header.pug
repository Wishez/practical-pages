header.header
	.container
		nav.navigation.navbar.navbar-default.navbar-fixed-top(role="navigation")
			//- figure.figure.figure_name-branch
			.container
				.navbar-header.navHeader.col-lg-5.col-md-4.col-sm-12.col-xs-12
					button#openMenuButton.navigation__openMenuButton.navbar-toggle( 
						type="button",  
						data-toggle="collapse",
						data-target="#navbar_collapse"
					)
						span.sr-only Toggle navigation
						span.icon-bar
						span.icon-bar
						span.icon-bar
					a.brand.navbar-brand(href="{% url 'services' %}").text-center
						h1.brandName 
							span.brandName_beneath.text-uppercase Сауна 
							br
							span.brandName_beneath.brandName_big Острова
				.navbarCollaps.collapse.navbar-collapse#navbar_collapse
					ul.nav.navbar-nav.navList.col-lg-7.col-md-8.col-sm-12.col-xs-12.text-center
						
						li.navItem.navItem_name-home
							a.navItem__refer(
								href="{% url 'services' %}", 
								title='Список доступных залов'
							) Залы
						| {% if appartments %}
						li.navItem.navItem_name-services
							a.navItem__refer.navItem__refer_appartments(
								href="{% url 'sauna' slug=appartments %}"
							) Апартаменты
						li.navItem.navItem_name-prices 
							a.navItem__refer(
								href="{% url 'shares' %}", 
								title='Акции в нашей сауне') Акции
						| {% else %}
						li.navItem.navItem_name-prices
							a.navItem__refer(
								href="{% url 'prices' %}",
								title='Расписание и цени на аренду залов') Цены
						| {% endif %}
						li.navItem.navItem_name-contacts
							a.navItem__refer(href="{% url 'contacts' %}") Контакты
				
				| {% if settings.footer_phone %}
				ul#headerContacts.headerContacts.list-unstyled
					li.headerContactsItem
						strong.headerContactsItem__label Телефон для записи
						a.headerContactsItem__refer(href='tel:{{ settings.footer_phone }}')
							span.d(itemprop="telephone") {{ settings.footer_phone }}
				| {% endif %}